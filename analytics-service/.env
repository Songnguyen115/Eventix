# Server Configuration
NODE_ENV=development
PORT=3002
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=eventix_analytics
DB_USER=eventix
DB_PASSWORD=password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-development
JWT_EXPIRES_IN=24h

# SMTP Configuration for Survey Emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=false

# RabbitMQ Configuration for Message Broker
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=eventix
RABBITMQ_PASS=password

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/analytics-service.log

# External Services
CHECKIN_SERVICE_URL=http://localhost:3001
TICKET_SERVICE_URL=http://localhost:3003
EVENT_SERVICE_URL=http://localhost:3004
